{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "assets/**/*.js",
    "integration_tests",
    "dist",
    "test_results",
    "uploads",
    "cypress.config.ts",
    "smoke_tests/cypress.config.ts",
    "eslint.config.mjs"
  ],
  "include": ["**/*.js", "**/*.ts"]
}
