{% macro scanBarcodeResultTag(params) %}

  <span id="scan-result-type" class="govuk-!-display-none" data-value="{{ 'READY_TO_DELIVER' if not params.resultType else params.resultType }}"></span>

  <div class="status-group">
    {% if params.resultType == null %}
      <strong class="govuk-tag govuk-tag--green">Barcode passed</strong>
    {% elif params.resultType == 'RANDOM_CHECK' %}
      <strong class="govuk-tag govuk-tag--yellow">Random check</strong>
    {% else %}
      <strong class="govuk-tag govuk-tag--red">Item of concern</strong>
    {% endif %}
  </div>

{% endmacro %}