{% if url and not 'cookies-policy' in url %}
  {% block cookieBanner %}
    {% if not cookiesPolicy.policy %}
      {% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

      {% set html %}
        <p class="govuk-body">We use some essential cookies to make this service work.</p>
        <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make
            improvements.</p>
      {% endset %}
      <form action="/cookies-policy/preferences" method="post">
        {{ govukCookieBanner({
            ariaLabel: "Cookies on Send legal mail",
            messages: [
              {
                headingText: "Cookies on Send legal mail",
                html: html,
                actions: [
                {
                  text: "Accept analytics cookies",
                  type: "submit",
                  name: "cookies",
                  value: "accept",
                  attributes: { 'data-qa': 'accept' }
                },
                {
                  text: "Reject analytics cookies",
                  type: "submit",
                  name: "cookies",
                  value: "reject",
                  attributes: { 'data-qa': 'reject' }
                },
                {
                  text: "View cookies",
                  href: "/cookies-policy",
                  classes: "govuk-link--no-visited-state",
                  attributes: { 'data-qa': 'view' }
                }
              ]
              }
            ]
        }) }}
      </form>
    {% endif %}
    {% if cookiesPolicy.showConfirmation %}
      {% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

      {% set acceptHtml %}
        <p class="govuk-body">You’ve {{ cookiesPolicy.policy }}ed additional cookies. You can <a class="govuk-link" href="/cookies-policy" data-qa="view">change your cookie settings</a> at any time.</p>
      {% endset %}

      <form action="/cookies-policy/confirm" method="POST">
        {{ govukCookieBanner({
          ariaLabel: "Cookies on Send legal mail",
          messages: [
            {
              html: acceptHtml,
              actions: [
              {
                text: "Hide this message",
                type: "submit",
                attributes: { 'data-qa': 'hide' }
              }
              ]
            }
          ]
        }) }}
      </form>
    {% endif %}
  {% endblock %}
{% endif %}