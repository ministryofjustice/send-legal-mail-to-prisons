{% extends "layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - Review recipients" %}
{% set pageId = 'review-recipients' %}

{% block content %}

  <section class="app-container govuk-body">
    {% if errors.length > 0 %}
      {{ govukErrorSummary({
        titleText: 'There is a problem',
        errorList: errors,
        attributes: { 'data-qa-errors': true }
      }) }}
    {% endif %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Review your recipients</h1>

        {{ govukTable({
          firstCellIsHeader: false,
          head: [
            { text: 'Name' },
            { text: 'Prisoner number or date of birth' },
            { text: 'Prison' },
            { text: '' },
            { text: '' }
          ],
          rows: recipients
        }) }}

        <p class="govuk-!-margin-top-6 govuk-!-margin-bottom-6">
          {# TODO SLM-83 will implement the target page for this link #}
          <a href="" class="govuk-link">Add another recipient</a>
        </p>

        {# TODO SLM-69 will implement the target page for this button #}
        {{ govukButton({
          text: 'Prepare barcodes',
          href: '',
          attributes: {'data-qa': 'prepare-barcodes-button' }
        }) }}

      </div>
    </div>

    <div class="govuk-grid-row govuk-!-margin-top-6">
      <hr />
      <div class="govuk-grid-column-full">

        <p>Press the button to generate a barcode</p>

        <div class="govuk-grid-column-two-thirds">
          <form action="/barcode/generate-barcode-image" novalidate>

            <div class="govuk-button-group">
              {{ govukButton({
                text: "Create Barcode",
                attributes: { "data-qa": "create-barcode-button" }
              }) }}
            </div>

          </form>
        </div>
      </div>
    </div>

  </section>

{% endblock %}
